<div class="topic-new-wrapper" >
  <div class="container">
    <div class="row">
      <div class="col-md-6 offset-md-3">
        <h1 class="text-center">Add Topic</h1>
        <%= form_for @topic do |f| %>
          <div class="form-group">
            <%= f.label :image %>
            <%= f.file_field :image%>
          </div>

          <div class="form-group">
            <%= f.label :url %>
            <%= f.text_field :url %>
          </div>
          
          <div class="form-group">
            <%= f.label :description %>
            <%= f.text_area :description, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.collection_select(:topic_category_id, TopicCategory.all, :id, :name) %>
          </div>
          
          <%= f.submit '投稿', class: 'btn btn-black btn-block' %>
          <%= link_to '削除', topic_path(@topic), class: "btn btn-danger", method: :delete %>
        <% end %>
      </div>
    </div>
  </div>
</div>