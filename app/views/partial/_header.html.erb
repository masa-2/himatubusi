<header class="header">
  <nav class="navbar navbar-default navbar-fixed-top navbar-transparent">
    <div class="container">
      <div class="row">

        <div class="title col-md-3">
          <%= link_to root_path do %>
            <span><%= link_to "HIMATUBUSI", root_path, class: "nav-link" %></span>
          <% end %>
        </div>
        
        <div class="topic-search col-md-offset-1 col-md-3">
          <p>Topic(description) Search</p>
          <%= form_tag(root_path, method: :get) do %>
            <%= text_field_tag :search, params[:search] %>
            <%= submit_tag "検索" %>
          <% end %>
        </div>
  
        <ul class="nav navbar-nav navbar-right col-md-offset-3 col-md-2">
          <li>
            <%= link_to new_topic_path, class: "nav-link listNew" do %>
            <i class="fas fa-paper-plane"></i>
            <% end %>
          </li>
          <li>
            <%= link_to user_session_path, method: :post, class: "nav-link listNew" do %>
            <i class="fas fa-sign-in-alt"></i>
            <% end %>
          </li>
          <li>
            <%= link_to destroy_user_session_path, method: :delete, class: "nav-link listDestroy" do %>
            <i class="fas fa-sign-out-alt"></i>
            <% end %>
          </li>
        </ul>
        
      </div>
    </div>
  </nav>
</header>