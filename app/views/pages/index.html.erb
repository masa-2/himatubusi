<div class="topic-index-wrapper">
  <div class="container">
    
    <% @topics.find_each do |topic| %>
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <div class="topic-index-single">
            <h2 class="topic-author">
              <%= topic.user.name %>
            </h2>
            <%= image_tag topic.image.url %>
            <p class="topic-text">
              <%= topic.description %>
            </p>
            <%= link_to comments_path(topic_id: topic.id) do %>
              <i class="far fa-comment-dots"></i>
            <% end %>
            <h4>コメント</h4>
            <% topic.comments.each do |comment| %>
              <p class= "topic-text"><%= comment.content %></p>
            <% end %>
            
            <% if !topic.favorite_users.include?(current_user) %>
              <%= link_to favorites_path(topic_id: topic.id), method: :post, remote: true do %>
                <i class="far fa-heart"></i>
              <% end %>
            <% else %>
              <%= link_to favorites_path(topic_id: topic.id), method: :delete, remote: true do %>
                <i class="fas fa-heart" aria-hidden="true"></i>
              <% end %>
            <% end %>
            <%= topic.favorite_users.count %>
          </div>
        </div>
      </div>
    <% end %>
    
    <h1>Ajax#index</h1>
    <p id="hoge">赤色になるよ</p>
    
    <script>
    $("#hoge").css("color","red")
    </script>

  </div>
  <%= paginate @topics %>
</div>